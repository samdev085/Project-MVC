@model Notice

@{
}

<H1>Edit Notice</H1>

<form asp-controller="Home" asp-action="EditNoticeConfirm" method="post" novalidate>
    <input type="hidden" asp-for="@Model.Id" />

    <div class="needs-validation mb-3">
        <label for="title" class="form-label">Notice Title</label>
        <input type="text" asp-for="Title" class="form-control w-25" id="title">       
    </div>

    <div class="needs-validation mb-3">
        <label for="text" class="form-label">Notice Text</label>
        <textarea type="text" asp-for="Text" class="form-control" id="text" rows="3"></textarea>        
    </div>
    <button type="submit" class="btn btn-primary">Edit Notice</button>

</form>
